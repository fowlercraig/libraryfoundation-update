<div id="store-bar" class="toolbar">
  <div class="row">
    <div class="max-10 desktop-10 tablet-6 mobile-3">
      <ul class="nav sf-menu">
      <li>
        <a href="/" class="title">The Library Store</a>
      </li>
      {% for link in linklists.main-menu.links %}
      <li {% if link.active %}class="current-menu-item"{% endif %}>
        <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>
      </li>
      {% endfor %}
      </ul>
    </div>
    <div class="max-2 desktop-2 tablet-2 mobile-3 text-right">
      <ul class="nav">
        <li class="cart">
          <a href="/search" class="search ss-search ss-gizmo"></a> | 
          <a href="/cart" id="CartToggle" class="ss-cart ss-gizmo">
            <span class="icon-fallback-text"><span class="icon icon-cart" aria-hidden="true"></span></span>
            <span id="CartCount">{{ cart.item_count }}</span>
            {{ 'layout.cart.items_count' | t: count: cart.item_count }}
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>